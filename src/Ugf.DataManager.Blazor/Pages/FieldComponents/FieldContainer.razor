<Field ColumnSize="Field.FieldSize">
    <FieldLabel>
        @($"{Field.FieldDescriptor.Info.Name}({Field.FieldTypeMessage?.Name ?? "*"})")
    </FieldLabel>
    <FieldBody>
        @ChildContent
    </FieldBody>
    @if (Field.FieldTypeMessage is not null)
    {
        <FieldHelp>
            @Field.FieldTypeMessage?.Description
        </FieldHelp>
    }
</Field>

@code {

    [Parameter]
    public IDataField Field { get; set; }

    [Parameter]
    public RenderFragment ChildContent { get; set; }

}