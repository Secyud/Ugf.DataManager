@using Ugf.DataManager.ClassManagement
@using Secyud.Ugf.DataManager
@using System.Collections
@inherits DataManagerComponentBase

@if (_data is not null)
{
    @foreach ((ClassPropertyDto property, SAttribute attr)  in _data.Properties)
    {
        <Field ColumnSize="ColumnSize.Is6">
            <FieldLabel>
                <Tooltip Text="@property?.Description"
                         TriggerTargetId="tooltip-custom-target" Inline>
                    <Badge Color="Color.Info">
                        @((property?.Name).IsNullOrEmpty() ? attr.Info.Name : property?.Name)
                    </Badge>
                </Tooltip>
            </FieldLabel>
            <ObjectViewer Property="property" Attr="attr" Data="_data" Obj="attr.GetValue(Object)"/>
        </Field>
    }
}