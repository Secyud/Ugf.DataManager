@inherits ObjectFieldBase
@typeparam TNumber where TNumber :struct

<Field ColumnSize="ColumnSize.IsAuto">
    <FieldLabel>
        @LabelText
    </FieldLabel>
    <FieldBody>
        <NumericEdit TValue="TNumber" @bind-Value="@Value"/>
    </FieldBody>
    <FieldHelp>
        @Description
    </FieldHelp>
</Field>

@code {
    public TNumber Value
    {
        get => (TNumber)GetValue();
        set => SetValue(value);
    }
}